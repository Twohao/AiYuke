<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/dialog_close"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:drawableRight="@drawable/colse_icon"/>
    <TextView
        android:id="@+id/dialog_club_name"
        android:layout_width="match_parent"
        android:layout_below="@id/dialog_close"
        android:gravity="center"
        android:padding="5dp"
        android:layout_height="wrap_content" />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/dialog_zarbar"
        android:layout_below="@id/dialog_club_name"
        android:layout_width="300dp"
        android:scaleType="fitXY"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:layout_height="300dp" />
    <TextView
        android:layout_below="@id/dialog_zarbar"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="5dp"
        android:text="俱乐部二维码"
        android:layout_height="wrap_content" />

</RelativeLayout>