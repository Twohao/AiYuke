<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/header_bg"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/tab_background"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_club_child_icon_iv"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        fresco:placeholderImage="@drawable/scan_photo_normal"/>
    <TextView
        android:id="@+id/item_club_child_title_tv"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/icon_home_video_more"
        android:layout_marginRight="10dp"
        android:text="加载中"/>
    <ImageView
        android:id="@+id/item_club_child_tag_iv"
        android:layout_width="60dp"
        android:scaleType="fitStart"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/lable_apply"/>
    </LinearLayout>


</LinearLayout>